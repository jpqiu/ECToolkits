&GLOBAL
  PROJECT      anatase
  RUN_TYPE     ENERGY
  PRINT_LEVEL  MEDIUM
  ELPA_KERNEL AVX2_BLOCK2
&END GLOBAL


&FORCE_EVAL
  METHOD         Quickstep 
  &DFT
    BASIS_SET_FILE_NAME     BASIS_ADMM
    BASIS_SET_FILE_NAME     BASIS_ADMM_MOLOPT
    BASIS_SET_FILE_NAME     BASIS_MOLOPT
    BASIS_SET_FILE_NAME     BASIS_MOLOPT_UCL
    POTENTIAL_FILE_NAME     GTH_POTENTIALS

    CHARGE 0
    MULTIPLICITY 1
 
    &MGRID
      NGRIDS 4
      CUTOFF 500
      REL_CUTOFF 60
    &END MGRID
 
    &QS
      EPS_DEFAULT  1.0E-15
      WF_INTERPOLATION PS
      EXTRAPOLATION_ORDER 3
      METHOD GPW
      EPS_PGF_ORB  1.0E-32
    &END QS

    &SCF
      SCF_GUESS  RESTART
      EPS_SCF    2.0E-6
      MAX_SCF    50
      &OT
        MINIMIZER       CG
        LINESEARCH      2PNT
        PRECONDITIONER  FULL_SINGLE_INVERSE
      &END
      &OUTER_SCF
        EPS_SCF  2.0E-6
        MAX_SCF  10
      &END
      &PRINT
        &RESTART  ON
        &END
      &END
    &END SCF

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC

  &END DFT

  &SUBSYS
    &CELL
      ABC [angstrom]   9.692    11.339    11.341
      MULTIPLE_UNIT_CELL 1 1 1
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME   anatase_bulk_relaxed.xyz
      COORD_FILE_FORMAT xyz
      MULTIPLE_UNIT_CELL 1 1 1
    &END TOPOLOGY
    &KIND O
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q6
    &END
    &KIND H
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END
    &KIND Ti
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q12
    &END KIND
  &END SUBSYS
&END FORCE_EVAL


